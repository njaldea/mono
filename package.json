{
	"name": "@nil-/mono",
	"version": "0.0.1",
	"description": "sample monorepo",
	"scripts": {
		"build": "npm run build -ws",
		"clean": "rm -rf packages && rm -rf node_modules",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"update": "npx ncu && npm --ws exec -- npx ncu",
		"update:apply": "npx ncu -u && npm --ws exec -- npx ncu -u"
	},
	"author": "Neil Aldea",
	"license": "UNLICENSED",
	"workspaces": [
		"projects/doc",
		"projects/3d"
	],
	"devDependencies": {
		"@typescript-eslint/eslint-plugin": "^5.41.0",
		"@typescript-eslint/parser": "^5.41.0",
		"eslint": "^8.26.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.8.0",
		"typescript": "^4.8.4"
	},
	"engines": {
		"node": ">=v16.15.0"
	},
	"type": "module"
}
