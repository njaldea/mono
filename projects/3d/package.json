{
    "name": "@nil-/3d",
    "version": "0.3.0",
    "author": {
        "email": "njaldea@gmail.com",
        "name": "Neil Aldea"
    },
    "license": "ISC",
    "scripts": {
        "build": "vite build",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "dev": "vite dev",
        "gen:package": "svelte-package -o package",
        "gen:meta": "npx @nil-/postpackage ./package",
        "package": "pnpm run gen:package && pnpm run gen:meta",
        "sync": "svelte-kit sync",
        "lint": "eslint . --ignore-path ../../.eslintignore"
    },
    "devDependencies": {
        "@nil-/doc": "workspace:^",
        "@nil-/doc-kit": "workspace:^",
        "@nil-/postpackage": "workspace:^",
        "@sveltejs/adapter-vercel": "^2.4.3",
        "@sveltejs/kit": "^1.22.4",
        "@sveltejs/package": "^2.2.0",
        "@types/earcut": "^2.1.1",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "eslint": "^8.46.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-svelte": "^2.32.4",
        "mdsvex": "^0.11.0",
        "svelte-check": "^3.4.6",
        "tslib": "^2.6.1",
        "typescript": "^5.1.6",
        "vite": "^4.4.8"
    },
    "peerDependencies": {
        "@babylonjs/core": "^5.57.1",
        "@babylonjs/gui": "^5.57.1",
        "@babylonjs/inspector": "^5.57.1",
        "@babylonjs/materials": "^5.57.1",
        "earcut": "^2.2.4",
        "svelte": "^4.1.1"
    },
    "publishConfig": {
        "directory": "package",
        "linkDirectory": true
    },
    "keywords": [
        "svelte",
        "babylonjs",
        "3D"
    ],
    "type": "module",
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "default": "./index.js",
            "svelte": "./index.js",
            "types": "./index.d.ts"
        }
    }
}
