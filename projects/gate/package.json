{
    "name": "@nil-/gate",
    "version": "0.0.1",
    "author": {
        "email": "njaldea@gmail.com",
        "name": "Neil Aldea"
    },
    "license": "ISC",
    "scripts": {
        "build": "vite build",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "dev": "vite dev",
        "gen:package": "svelte-package -o package",
        "gen:meta": "npx @nil-/postpackage ./package",
        "package": "pnpm run gen:package && pnpm run gen:meta",
        "sync": "svelte-kit sync",
        "test:unit": "vitest",
        "lint": "eslint . --ignore-path ../../.eslintignore"
    },
    "devDependencies": {
        "@nil-/doc": "workspace:^1.0.0",
        "@nil-/doc-kit": "workspace:^1.0.0",
        "@nil-/postpackage": "workspace:^0.0.4",
        "@sveltejs/adapter-vercel": "^2.4.3",
        "@sveltejs/kit": "^1.22.3",
        "@sveltejs/package": "^2.2.0",
        "@typescript-eslint/eslint-plugin": "^5.62.0",
        "@typescript-eslint/parser": "^5.62.0",
        "eslint": "^8.45.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-svelte": "^2.32.4",
        "mdsvex": "^0.11.0",
        "svelte-check": "^3.4.6",
        "tslib": "^2.6.0",
        "typescript": "^5.1.6",
        "vite": "^4.4.6",
        "vitest": "^0.26.3"
    },
    "peerDependencies": {
        "svelte": "^4.1.1"
    },
    "publishConfig": {
        "directory": "package",
        "linkDirectory": true
    },
    "keywords": [
        "svelte",
        "component"
    ],
    "type": "module",
    "private": true,
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "default": "./index.js",
            "svelte": "./index.js",
            "types": "./index.d.ts"
        }
    }
}
