{
    "name": "@nil-/gate",
    "version": "0.0.1",
    "author": {
        "email": "njaldea@gmail.com",
        "name": "Neil Aldea"
    },
    "license": "ISC",
    "scripts": {
        "build": "vite build",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "dev": "vite dev",
        "gen:package": "svelte-package -o package",
        "gen:meta": "npx @nil-/postpackage ./package",
        "package": "pnpm run gen:package && pnpm run gen:meta",
        "sync": "svelte-kit sync",
        "test:unit": "vitest",
        "lint": "eslint . --ignore-path ../../.eslintignore"
    },
    "devDependencies": {
        "@nil-/doc": "workspace:^0.3.1",
        "@nil-/postpackage": "workspace:^0.0.4",
        "@sveltejs/adapter-vercel": "^2.4.1",
        "@sveltejs/kit": "^1.15.0",
        "@sveltejs/package": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^5.57.0",
        "@typescript-eslint/parser": "^5.57.0",
        "eslint": "^8.37.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "mdsvex": "^0.10.6",
        "svelte-check": "^2.10.3",
        "tslib": "^2.5.0",
        "typescript": "^4.9.5",
        "vite": "^4.2.1",
        "vitest": "^0.26.3"
    },
    "peerDependencies": {
        "svelte": "^3.58.0"
    },
    "publishConfig": {
        "directory": "package",
        "linkDirectory": true
    },
    "keywords": [
        "svelte",
        "component"
    ],
    "type": "module",
    "private": true,
    "exports": {
        "./package.json": "./package.json",
        ".": {
            "default": "./index.js",
            "svelte": "./index.js",
            "types": "./index.d.ts"
        }
    }
}
